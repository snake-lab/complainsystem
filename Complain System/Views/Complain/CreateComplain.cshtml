@model Compain_System.Shared.ComplainboxViewModel
@{
    ViewData["Title"] = "CreateComplain";
}

<h1>CreateComplain</h1>

<form>
    <div class="form-group row">
        <label asp-for="ComplainTitle" class="col-4 col-form-label">Complain Title</label>
        <div class="col-8">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <i class="fa fa-binoculars"></i>
                    </div>
                </div>
                <input id="ComplainTitle" name="ComplainTitle" asp-for="ComplainTitle" placeholder="Complain Title" type="text" class="form-control">
            </div>
            <span asp-validation-for="ComplainTitle" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-4 col-form-label">Complain Description</label>
        <div class="col-8">
            <textarea id="ComplainDescription" asp-for="Description" name="ComplainDescription" cols="40" rows="5" class="form-control"></textarea>
        </div>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Deadline" class="col-4 col-form-label"></label>
        <div class="col-8">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <i class="fa fa-binoculars"></i>
                    </div>
                </div>
                <input asp-for="Deadline" class="form-control" />
            </div>
            <span asp-validation-for="Deadline" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Reminder" class="col-4 col-form-label"></label>
        <div class="col-8">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <i class="fa fa-binoculars"></i>
                    </div>
                </div>
                <input asp-for="Reminder" class="form-control" />
            </div>
            <span asp-validation-for="Reminder" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-4 col-8">
            <button name="submit" type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>